<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@color/base_color">
	  <ScrollView android:layout_marginTop="30dp"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/scrollView">
<androidx.constraintlayout.widget.ConstraintLayout 
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:background="@color/base_color">
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/subscriptions"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="35dp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCancel"
        app:layout_constraintVertical_bias="0.036">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/you_are_subscribed_until_mar_02_2022"
                android:textColor="@color/off_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="@string/click_on_manage_subscription_to_change_cancel_or_upgrade_your_plan"
                android:textColor="@color/off_white" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Monthly"
            android:textColor="@color/off_white" />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Yearly Subscription"
            android:textColor="@color/off_white" />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$14.99 Monthly"
            android:textColor="@color/off_white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscribe_monthly"
            android:background="@color/red"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:padding="13dp" />
        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:text="Yearly"
            android:textColor="@color/off_white" />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Monthly Subscription"
            android:textColor="@color/off_white" />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99.99 Yearly"
            android:textColor="@color/off_white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscribe Yearly"
            android:background="@color/red"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:padding="13dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resotre"
            android:background="@color/grey"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:padding="13dp" />
      
    </LinearLayout>
    </LinearLayout>
  <TextView
            android:id="@+id/test_subscribed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Subscribed"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:padding="13dp"
			android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
			android:layout_marginLeft="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"			/>
        <TextView
            android:id="@+id/test_unsubscribed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test UnSubscribed"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_subscribed"	
            android:padding="13dp"
android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"			/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_subscription_include_access_to_the_reliable_points"
        android:gravity="center"
        android:padding="13dp"
        android:textColor="@color/off_white"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_unsubscribed" />
</androidx.constraintlayout.widget.ConstraintLayout>
 </ScrollView>  
</androidx.constraintlayout.widget.ConstraintLayout>